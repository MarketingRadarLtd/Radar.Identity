@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    Layout = "_LayoutNoHeader";

    ViewData["Title"] = @Localizer["Sign up"];
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card text-center">
            <div class="card-body home-signup__card-body">
                <img src="~/images/radar-logo-rings.png" alt="company logo" class="home-signup__logo">
                <h5 class="card-title">@Localizer["Welcome"]</h5>
                <p class="card-text">@Localizer["Sign up to continue"]</p>

                <form>

                    <label class="sr-only" for="registerEmail">@Localizer["Email address"]</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text home-signup__input-group-text"><i class="fa fa-envelope-o" aria-hidden="true"></i></div>
                        </div>
                        <input type="text" class="form-control" id="registerEmail" aria-describedby="emailHelp" placeholder="@Localizer["Email address"]" autocomplete="off" autofocus>
                    </div>

                    <label class="sr-only" for="registerUsername">@Localizer["Username"]</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text home-signup__input-group-text"><i class="fa fa-user-o" aria-hidden="true"></i></div>
                        </div>
                        <input type="text" class="form-control" id="registerUsername" aria-describedby="emailHelp" placeholder="@Localizer["Username"]" autocomplete="off">
                    </div>

                    <label class="sr-only" for="registerPassword">@Localizer["Password"]</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text home-signup__input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></div>
                        </div>
                        <input type="password" class="form-control" id="registerPassword" aria-describedby="passwordHelp" placeholder="@Localizer["Password"]" autocomplete="off">

                    </div>

                    <button type="submit" class="btn btn-primary home-signup__continue-button">@Localizer["Continue"]</button>

                </form>

            </div>
            <div class="card-footer text-muted">
                @Localizer["Already have an account"] <a asp-controller="Home" asp-action="Login">@Localizer["Log in"]</a>
            </div>
        </div>
    </div>
</div>